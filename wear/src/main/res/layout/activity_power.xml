<com.sssemil.advancedsettings.util.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sssemil.advancedsettings.util.preference.Button2Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="system_menu"
        app:pref_icon="@mipmap/ic_apps"
        app:pref_key="system_menu"
        app:pref_title="@string/system_menu" />

    <com.sssemil.advancedsettings.util.preference.Button2Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="su -c reboot -p"
        app:pref_icon="@mipmap/ic_power"
        app:pref_key="power_off"
        app:pref_title="@string/poweroff" />

    <com.sssemil.advancedsettings.util.preference.Button2Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="su -c reboot"
        app:pref_icon="@mipmap/ic_reboot"
        app:pref_key="power_off"
        app:pref_title="@string/reboot" />

    <com.sssemil.advancedsettings.util.preference.Button2Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="su -c reboot recovery"
        app:pref_icon="@mipmap/ic_reboot"
        app:pref_key="power_off"
        app:pref_title="@string/recovery" />

    <com.sssemil.advancedsettings.util.preference.Button2Preference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="su -c reboot bootloader"
        app:pref_icon="@mipmap/ic_reboot"
        app:pref_key="power_off"
        app:pref_title="@string/bootloader" />

</com.sssemil.advancedsettings.util.preference.PreferenceScreen>
