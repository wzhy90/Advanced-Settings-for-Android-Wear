<com.sssemil.advancedsettings.util.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sssemil.advancedsettings.util.preference.BooleanPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_defaultValue="false"
        app:pref_icon="@mipmap/ic_cloud_outline"
        app:pref_iconOff="@mipmap/ic_cloud_outline_grey600"
        app:pref_iconOn="@mipmap/ic_cloud_outline"
        app:pref_key="alert_on_disconnect"
        app:pref_summaryOff="@string/off"
        app:pref_summaryOn="@string/on"
        app:pref_title="@string/alert_on_disconnect" />

    <com.sssemil.advancedsettings.util.preference.ButtonPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pref_activity="com.sssemil.advancedsettings.UnpairActivity"
        app:pref_icon="@mipmap/ic_disconnect"
        app:pref_key="unpair_settings"
        app:pref_title="@string/unpair" />

</com.sssemil.advancedsettings.util.preference.PreferenceScreen>
