<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text"
        android:id="@+id/small_info"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/wear2"
        android:id="@+id/wear2"
        android:layout_below="@+id/small_info"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate"
        android:id="@+id/donate"
        android:layout_gravity="center_horizontal|top"
        android:onClick="onDonateClick"
        android:layout_alignEnd="@+id/wear2"
        android:layout_alignStart="@+id/wear2"
        android:layout_below="@+id/rate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate"
        android:id="@+id/rate"
        android:layout_gravity="right|top"
        android:onClick="onRateItClick"
        android:layout_below="@+id/wear2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/donate" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide"
        android:id="@+id/hide"
        android:layout_below="@+id/donate"
        android:layout_alignParentStart="true"
        android:onClick="onHideClick"
        android:layout_alignRight="@+id/donate"
        android:layout_alignEnd="@+id/donate" />

</RelativeLayout>
